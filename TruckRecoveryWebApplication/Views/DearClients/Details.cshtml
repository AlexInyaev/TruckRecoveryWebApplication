        <script>
        function drawMarker(index) {
                    let progressCollection = document.querySelectorAll('.progressLi');
                    console.log(progressCollection.length)
                    for (let i = 0; i < progressCollection.length; i++) {
                        if (i < index) {
                            progressCollection[i].style.background = "url('https://cdn-icons.flaticon.com/png/512/5610/premium/5610944.png?token=exp=1652393575~hmac=e2118ccc8ea1806595d915e5d2c01f30') no-repeat 0 50%";

                        } else {
                            progressCollection[i].style.background = "url('https://cdn-icons-png.flaticon.com/512/481/481078.png') no-repeat 0 50%";
                            progressCollection[i].classList.add('makeColorLineForActiveElements');
                        }
                    }

                }

                drawMarker(+prompt('Введите число от 1 до 5', 2));

        </script>
