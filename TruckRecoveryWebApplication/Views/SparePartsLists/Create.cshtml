@model TruckRecoveryWebApplication.Models.SparePartsList

@{
    ViewData["Title"] = "Добавление запчастей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавление запчастей</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SparePartId" class="control-label"></label>
                <select asp-for="SparePartId" class ="form-control" asp-items="ViewBag.SparePartId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OnStock" /> @Html.DisplayNameFor(model => model.OnStock)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <input asp-for="OrderId" asp-items="ViewBag.OrderId" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
      <a asp-controller="Orders" asp-action="Diagnostics" asp-route-id="@Model.OrderId">Назад</a>
</div>

