@model WebServiceTruckRecovery.Models.Order

@{
    ViewData["Title"] = "Создание заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Новый заказ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
                <a asp-controller="Clients" asp-action="Create" class="btn btn-primary" >Новый клиент</a>
            </div>
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label"></label>
                <input asp-for="OrderNumber" class="form-control" />
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckList" class="control-label"></label>
                <textarea asp-for="TruckList" class="form-control" rows=7></textarea>
                <span asp-validation-for="TruckList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Отменить создание заказа</a>
</div>

